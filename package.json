{
  "name": "crafty-workspace",
  "private": true,
  "version": "1.17.2",
  "description": "Base repo for all JS Tooling at Swissquote",
  "license": "Apache-2.0",
  "main": "index.js",
  "author": "Stephane Goetz",
  "workspaces": {
    "packages": [
      "packages/*",
      "package-forks/*"
    ]
  },
  "scripts": {
    "lint:ci": "./run_all.sh lint && yarn lint:docs",
    "lint:code": "./run_all.sh lint --fix",
    "lint:docs": "./lint_docs.sh",
    "clean": "lerna clean --yes && rm -rf experiment/node_modules",
    "build": "oao run-script build",
    "test": "./run_all.sh test",
    "test:ci": "./run_all.sh test:ci",
    "publish:canary": "oao publish --no-git-commit --no-check-uncommitted --no-changelog --publish-tag canary --bump-dependent-reqs=exact",
    "publish:all": "oao publish --no-changelog --bump-dependent-reqs=exact"
  },
  "dependencies": {
    "@types/eslint": "^8.0.0",
    "@vercel/ncc": "0.33.0",
    "jest": "27.4.5",
    "markdown-spellcheck": "1.3.1",
    "oao": "2.0.2",
    "webpack-bundle-size-analyzer": "3.1.0",
    "write-good": "1.0.8"
  },
  "engines": {
    "node": ">=12"
  },
  "resolutions": {
    "@types/eslint": "^8.0.0"
  }
}
