{
  "name": "crafty-workspace",
  "private": true,
  "version": "1.22.3",
  "description": "Base repo for all JS Tooling at Swissquote",
  "license": "Apache-2.0",
  "main": "index.js",
  "author": "Stephane Goetz",
  "workspaces": {
    "packages": [
      "packages/*",
      "package-forks/*",
      "examples/*",
      "examples/maven/src/main/frontend"
    ]
  },
  "scripts": {
    "lint:ci": "yarn lint:code:ci && yarn lint:docs",
    "lint:code:ci": "yarn workspaces foreach -vp run lint",
    "lint:code": "./run_all.sh lint --fix",
    "lint:docs": "./lint_docs.sh",
    "clean": "lerna clean --yes && rm -rf experiment/node_modules",
    "build": "./run_all.sh build",
    "stats": "find . -name '*-stats.json' -print0 | xargs -0 utils/duplicates.js",
    "test": "./run_all.sh test",
    "test:ci": "./run_all.sh test:ci",
    "publish:canary": "./utils/publish.js --pre-release",
    "publish:all": "./utils/publish.js",
    "upgrade": "yarn up -R '**'"
  },
  "dependencies": {
    "@statoscope/cli": "5.26.2",
    "@types/eslint": "^8.0.0",
    "@types/jest": "^29.0.0",
    "@vercel/ncc": "0.36.1",
    "webpack-bundle-size-analyzer": "3.1.0",
    "write-good": "1.0.8"
  },
  "engines": {
    "node": ">=16"
  },
  "resolutions": {
    "@types/eslint": "^8.0.0",
    "rollup-plugin-typescript2@0.34.1": "patch:rollup-plugin-typescript2@npm%3A0.34.1#./.yarn/patches/rollup-plugin-typescript2-npm-0.34.1-6b67180d5c.patch",
    "postcss-loader@7.2.4": "patch:postcss-loader@npm%3A7.2.4#./.yarn/patches/postcss-loader-npm-7.2.4-3523bfa295.patch",
    "gulp-postcss@9.0.1": "patch:gulp-postcss@npm%3A9.0.1#./.yarn/patches/gulp-postcss-npm-9.0.1-bb3337d1e9.patch",
    "make-dir@^3.0.0": "patch:make-dir@npm%3A3.1.0#./.yarn/patches/make-dir-npm-3.1.0-d1d7505142.patch",
    "make-dir@^3.0.2": "patch:make-dir@npm%3A3.1.0#./.yarn/patches/make-dir-npm-3.1.0-d1d7505142.patch",
    "make-dir@~3.1.0": "patch:make-dir@npm%3A3.1.0#./.yarn/patches/make-dir-npm-3.1.0-d1d7505142.patch",
    "gulp-typescript@5.0.1": "patch:gulp-typescript@npm%3A5.0.1#./.yarn/patches/gulp-typescript-npm-5.0.1-c7e82db52d.patch"
  },
  "packageManager": "yarn@3.6.1"
}
