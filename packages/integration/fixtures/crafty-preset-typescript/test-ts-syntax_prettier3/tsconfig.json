{
  "exclude": [
    "node_modules",
    "node",
    "css",
    "etc",
    "dist"
  ],
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "react",
    "module": "esnext",
    "sourceMap": true,
    "target": "esnext",
    "lib": ["DOM", "ES2017", "DOM.Iterable", "ScriptHost"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}
